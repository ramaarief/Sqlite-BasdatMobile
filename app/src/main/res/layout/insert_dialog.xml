<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/title_color"
        android:layout_marginBottom="40dp"
        android:text="INSERT DATA"
        android:textColor="#fff"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:gravity="center"/>

    <EditText
        android:id="@+id/u_id"
        android:paddingLeft="20sp"
        android:hint="isi id anda"
        android:background="@drawable/rounded_data"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20sp"
        android:layout_gravity="center"
        android:width="150px" />


    <EditText
        android:id="@+id/u_name"
        android:paddingLeft="20sp"
        android:hint="isi nama anda"
        android:background="@drawable/rounded_data"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20sp"
        android:layout_gravity="center" />


    <EditText
        android:id="@+id/u_email"
        android:paddingLeft="20sp"
        android:hint="isi email anda"
        android:background="@drawable/rounded_data"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20sp"
        android:layout_gravity="center" />


    <EditText
        android:id="@+id/u_telepon"
        android:paddingLeft="20sp"
        android:hint="isi no telepon anda"
        android:background="@drawable/rounded_data"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginBottom="40sp"
        android:layout_gravity="center" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_insert"
        android:layout_gravity="center"
        android:text="INSERT"
        android:textColor="#fff"
        android:onClick="saveRecord"/>
</LinearLayout>